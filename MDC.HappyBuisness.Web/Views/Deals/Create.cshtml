@using MDC.HappyBuisness.Utils.Enums
@using MDC.HappyBuisness.Web.Models.Deals
@model DealViewModel

@{
    ViewData["Title"] = "Create a Deal";
}

<h4>Create a new Deal</h4>

<form asp-action="Create">
    
    <hr />
    <div class="mb-3">
        <a class="btn btn-secondary" asp-action="Index">Cancel</a>
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
    <hr />

    <div class="row">
        <div class="col-md-4">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="BuyerId" class="control-label"></label>
                <select asp-for="BuyerId" class="form-control" asp-items="@Model.Buyers"></select>
            </div>
            <div class="form-group">
                <label asp-for="PharmacistId" class="control-label"></label>
                <select asp-for="PharmacistId" class="form-control" asp-items="@Model.Pharmacists"></select>
            </div>
            <div class="form-group">
                <label asp-for="PaymentType" class="control-label"></label>
                <select asp-for="PaymentType" class="form-control" asp-items="@Html.GetEnumSelectList<PaymentType>()"></select>
                <span asp-validation-for="PaymentType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DrugIds" class="control-label"></label>
                <select asp-for="DrugIds" class="form-control" asp-items="@Model.Drugs"></select>
                <span asp-validation-for="DrugIds" class="text-danger"></span>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
