@using MDC.HappyBuisness.Web.Models.Deals
@model DealDetailsViewModel

@{
    ViewData["Title"] = "Deal Details";
}

<div class="container">

    <h4>Deal <span class="text-primary">@Model.TransactionCode</span></h4>
    
    <hr />
    <a class="btn btn-secondary" asp-action="Index">Back</a>
    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.Id">Edit</a>
    <hr />

    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BuyerCodeName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BuyerCodeName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PaymentType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PaymentType)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DealTime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DealTime)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PharmacistFullName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PharmacistFullName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TotalPrice)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TotalPrice)
        </dd>
    </dl>

</div>